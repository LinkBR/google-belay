{
  "name": "Belay",
  "version": "0.1",
  "description": "Secure sharing.",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background_page": "background.html",
  "permissions": [
    "http://*/*",
    "file://*",
    "tabs"
  ],
  "content_scripts" : [
  {
    "matches": ["http://*/*", "file://*"],
    "js": ["injected.js"]
  }]
}
